---
interface Props {
  classname?: string
}

const { classname } = Astro.props

import Link from "@components/Link.astro";

const style = `flex ${ classname }`
---

<div class={ style }>
  <Link href='https://github.com/thoriqadillah' classname='socials mr-3' newtab='1'>
    <img src="/github.svg" width="24px" title="My Github profile" alt="github"/>
  </Link>
  <Link href='https://linkedin.com/in/thoriqadillah' classname='socials mr-3' newtab='1'>
    <img src="/linkedin.svg" alt="linkedin" width="23px" title="My LinkedIn profile" alt="linkedin"/>
  </Link>
  <Link href='https://t.me/thoriqadillah' classname='socials mr-4' newtab='1'>
    <img src="/telegram.svg" alt="telegram" width="22px" title="My Telegram contact"/>
  </Link>
  <Link href='mailto:thoriqadillah59@gmail.com' classname="socials" newtab='1'>
    <img src="/email.png" width="22px" title="My Email" alt="email"/>
  </Link>
</div>