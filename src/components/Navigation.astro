---
import type { HTMLAttributes } from 'astro/types'
import Link from './Link.astro'

interface Props extends HTMLAttributes<'a'> {
  href: string
  classname?: string
}

const { href, classname, ...props } = Astro.props
const { pathname } = Astro.url

const setCurrent = href === pathname ? 'font-bold text-main' : 'hover:text-second'
const style = `text-bright px-3 py-2 font-body hover:no-underline ${ classname } ${ setCurrent }`
---

<Link {...props} href={ href } classname={ style }>
  <slot/>
</Link>